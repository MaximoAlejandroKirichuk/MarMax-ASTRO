---
interface Props {
    title: string;
    body: string;
    contenido: string;
}

const {body, title, contenido} = Astro.props;
---
-
<template>
  <div class="accordion">
    <h2>{title}</h2>
    <p>{body}</p>
  </div>
  <div class="contenido">
    <p>{contenido}</p>
  </div>
</template>

<style>
  .accordion {
    background-color: #f1f1f1;
    color: #444;
    cursor: pointer;
    padding: 18px;
    width: 100%;
    border: none;
    text-align: left;
    outline: none;
    font-size: 15px;
    transition: 0.4s;
  }
  .contenido{
    padding: 0 18px;
    display: block;
    overflow: hidden;
    background-color: #f1f1f1;
  }
  .contenido-none{
    display: none;
  }
</style>

<script>
    let accordion = document.getElementsByClassName("accordion");
    
    
</script>
