---
interface Props {
  titulo1: string;
  titulo2: string;
  titulo3: string;
  body1: string;
  body2: string;
  body3: string;
}

const { titulo1,titulo2,titulo3, body1, body2,body3} = Astro.props;
---
<div>
  <ul>
    <li>
      <button class="pregunta flex items-center justify-between w-full py-5 font-medium rtl:text-right text-gray-400 border-b border-gray-200 dark:border-gray-700 dark:text-gray-400 gap-3" data-toggle="1">
        <h2>{titulo1}</h2>
        <span class="toggle-icon">+</span>
      </button>
    </li>
    <div class="contenido hidden" id="contenidoUno">
        <p>{body1}</p>    
    </div>
    <li>
      <button class="pregunta flex items-center justify-between w-full py-5 font-medium rtl:text-right text-gray-400 border-b border-gray-200 dark:border-gray-700 dark:text-gray-400 gap-3" data-toggle="2">
        <h2>{titulo2}</h2>
        <span class="toggle-icon">+</span>
      </button>
    </li>
    <div class="contenido hidden" id="ContenidoDos">
        <p>{body2}</p>
    </div>
    <li>
      <button class="pregunta flex items-center justify-between w-full py-5 font-medium rtl:text-right text-gray-400 border-b border-gray-200 dark:border-gray-700 dark:text-gray-400 gap-3" data-toggle="3">
        <h2>{titulo3}</h2>
        <span class="toggle-icon">+</span>
      </button>
    </li>
    <div class="contenido hidden" id="ContenidoTres">
        <p>{body3}</p>
    </div>
  </ul>
</div>

<style>
    .contenido {
      display: none;
      font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
      border-bottom:   white 1px solid;;
      background-color: transparent;
      padding: 10px;
      padding-bottom: 25px;
    }
    .pregunta {
      cursor: pointer;
    }
    .pregunta h2:hover {
      color: #ffffff;
    }
    .pregunta.borderless {
      border-bottom: none;
    }
    .toggle-icon {
      font-size: 1.25rem;
    }
</style>

<script>
  const preguntas = document.querySelectorAll('.pregunta');
  const contenidos = document.querySelectorAll('.contenido');
  preguntas.forEach((pregunta, index) => {
    pregunta.addEventListener('click', () => {
      contenidos.forEach((contenido, idx) => {
        contenido.style.display = 'none';
        preguntas[idx].querySelector('.toggle-icon').textContent = '+';
        preguntas[idx].classList.remove('borderless');
      });
      contenidos[index].style.display = 'block';
      pregunta.querySelector('.toggle-icon').textContent = '-';
      pregunta.classList.add('borderless');
    });
  });
  
</script>


