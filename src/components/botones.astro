---
interface Props {
	body: string;
  url: string;
}

const {body, url} = Astro.props;
---
    <a class="btn" href = {url} target="_blank" style="text-decoration: none; color: white;">{body}</a>


<style>
    .btn {
  font-size: 1.2rem;
  padding: 1rem 2.5rem;
  border: none;
  outline: none;
  border-radius: 0.4rem;
  cursor: pointer;
  text-transform: uppercase;
  background: radial-gradient(125% 125% at 50% 10%, #000 40%,  rgb(123, 79, 243) 100%);
  color: rgb(234, 234, 234);
  font-weight: 700;
  transition: 0.6s;
  box-shadow: 0px 0px 60px #2c2c2c;
  -webkit-box-reflect: below 10px linear-gradient(to bottom, rgba(0,0,0,0.0), rgba(0,0,0,0.4));
}

.btn:active {
  scale: 0.92;
}

.btn:hover {

}
</style>